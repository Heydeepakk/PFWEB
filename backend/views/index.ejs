<body background="./hi.jpeg">

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">

    <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>
    
    <div class="container center">
        <div class="row">
            <div class="col-md-12">
                <br>
                <br>
            </div>
        </div>
        <form action="/extracttextfromimage" method="post" enctype="multipart/form-data">

            <h3>Upload File to get Extracted Data</h3>
            <br><br>
            <label style="font-size:25px">Upload Image File:</label>
            <p id="namefile">Only pics allowed!(jpg,jpeg,bmp,png)</p>
            <br><br>
            <input type="file" name="file" accept="image/*" required id="">
            <br>
            <br>
            <button class="button">Upload file for Data Extraction</button>
            <div class="row">
                <div class="col-md-20">
                </div>
        </form>
        <div>
            <textarea placeholder="Enter your opinion here ..." style="width: 500px;height: 520px; position: absolute;
            top: 0%;left: 150%;border:3px dashed indigo;background-color:blue;
            background-color: rgba(255, 255, 255, 0.13); 
            box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);">
                            <%=data%>

    </textarea>
        </div>
        <script src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
        <script src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js'></script>
        <script src="./script.js"></script>
</body>

</html>